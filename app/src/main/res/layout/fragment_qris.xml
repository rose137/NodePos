<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg_header">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <!-- Row Buttons -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGenerate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Generate QR"
                    style="?attr/materialButtonStyle"
                    app:cornerRadius="16dp"
                    android:layout_marginEnd="16dp"
                    app:backgroundTint="@color/babyblue"
                    android:textColor="@android:color/white"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnScan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan"
                    style="?attr/materialButtonOutlinedStyle"
                    android:textColor="@color/babyblue"
                    app:cornerRadius="16dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Container Input + Dropdown + QR -->
        <LinearLayout
            android:id="@+id/containerQR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bg_container"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center_horizontal"
            android:visibility="gone">

            <!-- Dropdown Kategori -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pilih Kategori"
                android:layout_marginBottom="12dp"
                app:endIconMode="dropdown_menu"
                app:boxStrokeColor="@color/babyblue"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxBackgroundColor="@android:color/white"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp">

                <AutoCompleteTextView
                    android:id="@+id/dropdownKategori"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:paddingVertical="12dp"
                    android:paddingStart="16dp"
                    android:popupBackground="@drawable/bg_dropdown"
                    android:textSize="14sp"
                    android:hint="" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Dropdown Produk -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pilih Produk"
                android:layout_marginBottom="12dp"
                app:endIconMode="dropdown_menu"
                app:boxStrokeColor="@color/babyblue"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxBackgroundColor="@android:color/white"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp">

                <AutoCompleteTextView
                    android:id="@+id/dropdownProduk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:paddingVertical="12dp"
                    android:paddingStart="16dp"
                    android:popupBackground="@drawable/bg_dropdown"
                    android:textSize="14sp"
                    android:hint="" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Card untuk QR Code -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="260dp"
                android:layout_height="260dp"
                android:gravity="center"
                app:cardCornerRadius="24dp"
                app:cardElevation="10dp">

                <ImageView
                    android:id="@+id/ivQRCode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:scaleType="centerInside"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Text Footer -->
            <TextView
                android:id="@+id/tvFooter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="Transaksi cepat, aman, dan mudah bersama NodePOS."
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Card Struk -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardReceipt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        android:backgroundTint="@android:color/white">

        <!-- FrameLayout biar bisa overlay tombol share -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Konten utama -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center_horizontal">

                <!-- Judul -->
                <TextView
                    android:id="@+id/tvMerchant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NodePos Store"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terima kasih sudah berbelanja"
                    android:textSize="14sp"
                    android:textColor="@color/common_google_signin_btn_text_light"
                    android:layout_marginTop="4dp"
                    android:gravity="center"/>

                <!-- Ikon Status -->
                <ImageView
                    android:id="@+id/imgStatus"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_success"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PEMBAYARAN BERHASIL"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/teal_700"
                    android:layout_marginTop="12dp"/>

                <!-- Detail struk -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginVertical="16dp"/>

                <!-- Detail struk -->
                <TextView
                    android:id="@+id/tvDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-- Detail Struk --"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="@android:color/black"/>

                <!-- Tombol Aksi -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp">

                    <Button
                        android:id="@+id/btnBack"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Kembali"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/babyblue"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btnDownload"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Download"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/teal_700"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="8dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Tombol Share Icon di pojok kanan atas -->
            <ImageButton
                android:id="@+id/btnShareIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="end|top"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                app:srcCompat="@android:drawable/ic_menu_share"
                app:tint="@color/teal_700" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
